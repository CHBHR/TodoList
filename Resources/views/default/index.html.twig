{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}

    <div class="row">
        <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_list_done') }}" class="btn btn-primary">Consulter la liste des tâches terminées</a>
    </div>
    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
        <div class="row">
            <a href="{{ path('task_list_anonymous') }}" class="btn btn-primary">Consulter les tâches anonymes</a>
            <a href="{{ path('user_list') }}" class="btn btn-primary">Consulter les utilisateurs</a>
        </div>   
    {% endif %}
{% endblock %}
